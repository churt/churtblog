{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Home/Index template start}}
<header id="cover-opener-human" style="{{#if @blog.cover_image}}background-image: url({{@blog.cover_image}}){{/if}}">
	{{> menu}}

	<div id="head-color-human"></div>

	{{#if @blog.logo}}
	<img id="corner-logo-human" src="{{@blog.logo}}" alt="{{@blog.title}} Logo">
	{{else}}
	<h1 id="corner-blog-title-human"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
	{{/if}}

	<div id="inside-head-human">

		<div class="table-cell-like">
			{{#if @blog.logo}}
			<img id="index-logo-human" class="diffuse-elements" src="{{@blog.logo}}" alt="{{@blog.title}} Logo">
			{{else}}
			<h1 id="blog-title-human" class="diffuse-elements">{{@blog.title}}</h1>
			{{/if}}

			<p id="index-description-human" class="diffuse-elements">
				{{@blog.description}}
			</p>
		</div>
		
	</div>
</header>

<main id="post-feed-human">

	{{! Pagination links - displayed only on paged layout}}
	<div id="pagination-top-human">
	{{pagination}}
	</div>

	{{! Loop of posts for current page}}
	{{> loop}}
	
</main>