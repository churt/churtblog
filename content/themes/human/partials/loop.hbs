{{! Loop that displays the articles query on posts feed}}
<div id="posts-wrapper-human">	
{{#foreach posts}}
<article class="{{post_class}} {{#unless feature_image}}no-thumb-post{{/unless}}">
	<section class="post-data-human">
		<header>
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
				
			<div class="author-data">
				{{#if author.profile_image}}
				<img src="{{img_url author.profile_image}}" alt="{{author.name}}" class="author-pic">
				{{/if}}
				{{author}}<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="LL"}}</time>
				{{#if tags}}
				<br>
				on: {{tags separator=", "}}
				{{/if}}
			</div>

		</header>
		
		<div class="post-excerpt">
		{{#if feature_image}}
		{{excerpt words="24"}}...
		{{else}}
		{{excerpt words="80"}}...
		{{/if}}
		</div>

		<a href="{{url}}" class="read-more-link-human">Read More</a>
	
	{{#if feature_image}}
	</section><figure class="post-thumbnail-human" style="background-image: url({{img_url feature_image}})"></figure>
	{{else}}
	</section>
	{{/if}}
</article>
{{/foreach}}
</div>

{{! Pagination links - displayed on every page}}
{{pagination}}