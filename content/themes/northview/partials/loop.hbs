{{! Loop partial that displays the articles query on posts feed}}

{{#foreach posts}}
<article class="{{post_class}} feed-post">
	{{#if feature_image}}
	<div class="thumbnail-container" 
	style="background-image:url({{img_url feature_image}})"></div>
	{{/if}}
	<section class="post-info-card {{#unless feature_image}}center-card{{/unless}}">
		<header class="left-side">
			<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			<span class="post-meta-info">
				By {{author}} â€¢ <time>{{date format="MMMM DD, YYYY"}}</time>
			</span>
			<div class="tags-block">
				{{tags separator=" "}}
			</div>
		</header><section class="right-side">
			<p>	
			{{excerpt words="54"}}...
			</p>

			<a href="{{url}}" class="read-more-link">
				Read More
			</a>
		</section>
	</section>
</article>
{{/foreach}}