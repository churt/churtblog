{{!< default}}
{{! Top line inserts this template on main layout}}

{{! Post template }}
{{#post}}
<main id="main-wwise">
	<article id="post-page-wwise" class="{{post_class}}">

		<header id="header-post-content-wwise">
			<h1>{{title}}</h1>
			
			<span><time>{{date format="MMMM DD, YYYY"}}</time> â€¢ on: {{tags separator=", "}}</span>
		</header>

		{{#if feature_image}}
		<div id="post-page-cover-wwise"
		style="background-image:url({{img_url feature_image}})"></div>
		{{/if}}

		<section id="post-content-wwise">
			{{content}}
		</section>
 
		<footer id="author-share-wwise">
			<section class="author-side">
				{{#author}}
				{{#if profile_image}}
				<img class="author-pic" src="{{img_url profile_image}}" alt="{{name}}">
				{{/if}}

				<h4 class="author-name"><a href="{{url}}">{{name}}</a></h4>

				{{#if website}}
				<a class="author-website" href="{{website}}">{{website}}</a>
				{{/if}}

				{{#if bio}}
				<p class="author-bio">{{bio}}</p>
				{{/if}}

				<div class="author-location-social">
					{{#if location}}
					<span class="author-location"><i class="fa fa-map-marker"></i> {{location}}</span>
					{{/if}}

					{{#if twitter}}
					<a class="author-twitter" href="{{twitter_url}}"><i class="fa fa-twitter"></i></a>
					{{/if}}

					{{#if facebook}}
					<a class="author-facebook" href="{{facebook_url}}"><i class="fa fa-facebook"></i></a>
					{{/if}}
				</div>
				{{/author}}
			</section><section class="share-side">
				<h4 class="share-label">Share this post</h4>

				<a class="share-link twitter"
				href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
				onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
					<span class="fa fa-twitter"></span>
				</a>
				<a class="share-link facebook"
				href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
				onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
					<span class="fa fa-facebook"></span>
				</a>
				<a class="share-link google-plus"
				href="https://plus.google.com/share?url={{url absolute="true"}}"
				onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
					<span class="fa fa-google-plus"></span>
				</a>
			</section>

			<section class="jump-to-posts">
				<h3>More from {{@blog.title}}</h3>
			
				{{#next_post}}
				<article class="more-from-blog next-post">
					<h4>{{title}}</h4>
					<p>
						{{excerpt words="30"}}...
					</p>
					<a href="{{url}}">See Article</a>
				</article>
				{{/next_post}}

				{{#prev_post}}
				<article class="more-from-blog prev-post">
					<h4>{{title}}</h4>
					<p>
						{{excerpt words="30"}}...
					</p>
					<a href="{{url}}">See Article</a>
				</article>
				{{/prev_post}}
			</section>

			<section id="comments-area-in-post"></section>
		</footer>
	</article>
</main>
{{/post}}