{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start main content area -->
<div class="container">
	<div class="item-container clearfix">
		{{#foreach posts}}
		<!-- start article -->
		<article id="{{id}}" class="item post-wrap {{post_class}}">
			{{#if featured}}
			<div class="featured">
				<i class="fa fa-star"></i>
			</div>
			{{/if}}
			{{#if feature_image}}
			<div class="featured-media">
				<a href="{{url}}" title="post-title"><img src="{{img_url feature_image}}" alt="{{{title}}}"></a>
			</div>
			{{/if}}
			<header class="post-header">
				<div class="post-meta">
					<span class="date">{{date format="MMM DD, YYYY"}}</span> &#45;
					{{#author}}
					<span class="author">By <a href="{{url}}" title="{{name}}">{{name}}</a></span>
					{{/author}}
				</div>
				<h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
			</header>
			<div class="post-content">
				{{excerpt words="46"}}
			</div>
			{{#if tags}}
			<div class="tag-list">

				{{tags separator=", " prefix="Tags:&nbsp;"}}
			</div>
			{{/if}}
			<div class="permalink">
				<a href="{{url}}" class="btn btn-default">Read More</a>
			</div>
		</article>
		<!-- end article -->
		{{/foreach}}
	</div>
</div>
<!-- end main content area -->
{{pagination}}
